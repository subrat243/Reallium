# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/deepfake_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_SECRET_KEY=change-this-to-a-random-secret-key
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Model Storage
MODEL_STORAGE_TYPE=s3  # s3, azure, gcs, local
MODEL_STORAGE_BUCKET=deepfake-models
MODEL_STORAGE_PATH=/models
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Media Storage
MEDIA_STORAGE_TYPE=s3  # s3, azure, gcs, local
MEDIA_STORAGE_BUCKET=deepfake-media
MEDIA_STORAGE_PATH=/media
MEDIA_MAX_SIZE_MB=100

# ML Configuration
ML_DEVICE=cuda  # cuda, cpu
ML_BATCH_SIZE=32
ML_NUM_WORKERS=4
ML_AUDIO_SAMPLE_RATE=16000
ML_VIDEO_FPS=5
ML_VIDEO_MAX_FRAMES=150

# Model Versions
AUDIO_MODEL_VERSION=v1.0.0
VIDEO_MODEL_VERSION=v1.0.0
FUSION_MODEL_VERSION=v1.0.0

# Training Configuration
TRAINING_ENABLED=false
TRAINING_DATA_PATH=/data/training
TRAINING_CHECKPOINT_PATH=/models/checkpoints
TRAINING_EPOCHS=50
TRAINING_LEARNING_RATE=0.001
TRAINING_BATCH_SIZE=32

# Continuous Learning
CONTINUOUS_LEARNING_ENABLED=false
CONTINUOUS_LEARNING_THRESHOLD=1000  # Min samples before retraining
CONTINUOUS_LEARNING_SCHEDULE=0 2 * * *  # Cron: Daily at 2 AM

# Security
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MFA_ENABLED=true
MFA_ISSUER=DeepfakeDetection

# RBAC
RBAC_ENABLED=true
DEFAULT_ROLE=viewer
ADMIN_EMAIL=admin@example.com

# Encryption
ENCRYPTION_KEY=change-this-to-a-32-byte-key
ENCRYPTION_ALGORITHM=AES-256-GCM

# Audit Logging
AUDIT_ENABLED=true
AUDIT_LOG_PATH=/logs/audit
AUDIT_RETENTION_DAYS=90

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_PATH=/logs/app

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Edge Agent Sync
EDGE_SYNC_ENABLED=true
EDGE_SYNC_INTERVAL_SECONDS=300
EDGE_MODEL_UPDATE_CHECK_HOURS=24

# Threat Intelligence
THREAT_INTEL_ENABLED=true
THREAT_INTEL_SOURCES=["osint", "internal"]
THREAT_INTEL_UPDATE_HOURS=6

# Email Notifications
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM=noreply@deepfakedetection.com

# Webhook Notifications
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# Development
DEBUG=false
TESTING=false
MOCK_MODELS=false

# Feature Flags
FEATURE_BATCH_PROCESSING=true
FEATURE_LIVE_STREAM=false
FEATURE_EXPLAINABILITY=true
FEATURE_BLOCKCHAIN_AUDIT=false
